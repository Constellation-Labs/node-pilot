{
  "name": "@constellation-network/node-pilot",
  "description": "An easy deployment and monitoring tool for Constellation nodes.",
  "version": "0.0.7",
  "author": "Frank Fox",
  "bin": {
    "cpilot": "bin/run.js"
  },
  "bugs": "https://github.com/Constellation-Labs/node-pilot/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Constellation-Labs/node-pilot.git"
  },
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "yarn lint",
    "prepack": "oclif manifest && oclif readme",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md",
    "start": "./bin/dev.js",
    "debug": "DEBUG=true ./bin/dev.js",
    "pub": "npm publish --access public"
  },
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=22.3.0"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.8.0",
    "@oclif/core": "^4",
    "@oclif/plugin-help": "^6",
    "@oclif/plugin-plugins": "^5",
    "@stardust-collective/dag4-keystore": "^2.6.0",
    "chalk": "^5.5.0",
    "dotenv": "^17.2.1",
    "js-sha256": "^0.11.1",
    "json-bigint-patch": "^0.0.8",
    "node-localstorage": "^3.0.5",
    "shelljs": "^0.10.0",
    "tty-table": "^4.2.3"
  },
  "devDependencies": {
    "@eslint/compat": "^1",
    "@oclif/prettier-config": "^0.2.1",
    "@oclif/test": "^4",
    "@types/chai": "^4",
    "@types/mocha": "^10",
    "@types/node": "^22.17.1",
    "@types/node-localstorage": "^1.3.3",
    "@types/shelljs": "^0.8.17",
    "chai": "^4",
    "eslint": "^9",
    "eslint-config-oclif": "^6",
    "eslint-config-prettier": "^10",
    "mocha": "^10",
    "oclif": "^4",
    "shx": "^0.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  },
  "files": [
    "./bin",
    "./dist",
    "./oclif.manifest.json",
    "./projects",
    "./README.md",
    "./LICENSE"
  ],
  "homepage": "https://github.com/Constellation-Labs/node-pilot",
  "keywords": [
    "constellation network",
    "validator",
    "node"
  ],
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "type": "module",
  "oclif": {
    "bin": "cpilot",
    "dirname": "cpilot",
    "commands": {
      "default": "status",
      "strategy": "pattern",
      "target": "./dist/commands"
    },
    "plugins": [
      "@oclif/plugin-help"
    ],
    "additionalHelpFlags": [
      "-h"
    ],
    "additionalVersionFlags": [
      "-v"
    ],
    "topicSeparator": " "
  }
}
